 <div class="row">
  <div class="col-md-3">

     <span class="job_title_icon"><%= job_title_icon%></span>

    <!-- TODO fixa profilbilder<%= image_tag @user.profile.avatar.url %>-->
  </div>

   <div class="col-md-6">
      <div class="well">
     <h1 class="name"><%= @user.profile.first_name%> <%= @user.profile.last_name%></h1>
     <h2>Job title</h2>
     <div class="well profile-description"><%= @user.profile.job_title%></div>
     
     
     <h2>Description</h2>
     <div class="well">
     <%= @user.profile.description%> <br/>
     </div>
     
     <h2>Contact info</h2>

     <% if current_user.plan_id == 2 %>
     <div class ="well contact-info-enabled">
      <p><b>Phone:</b></p><%= @user.profile.phone_number%> <br/>
       <p><b>Email:</b></p><%= @user.profile.contact_email%> <br/>
     </div>
     <%elsif%>
     <div class="well contact-info-blocked">
       <h2 class="name"> PRO feature</h2>
     </div>
     <% end %>

 
   </div>
  </div>
 </div>
 
